<head>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/docs-app/css/dist/mdb5/standard/core.min.css">
  <link rel="stylesheet" id="roboto-subset.css-css" href="https://mdbcdn.b-cdn.net/wp-content/themes/mdbootstrap4/docs-app/css/mdb5/fonts/roboto-subset.css?ver=3.9.0-update.5" type="text/css" media="all">

  <link rel="stylesheet" href="../public/css/editAddress.css">

  <script src="/js/address.js"></script>


</head>

<header>
  <%- include('header.ejs') %>
</header>

<body>

<div class="py-5">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col">
        <div class="card my-4 shadow-3">
          <div class="row g-0">
            <div class="col-xl-6 d-xl-block bg-image">
              <img src="https://mdbcdn.b-cdn.net/img/Others/extended-example/delivery.webp" alt="Sample photo"
                class="img-fluid" />
              <div class="mask" style="background-color: rgba(0, 0, 0, 0.6)">
                <div class=" justify-content-center align-items-center h-100">
                  <div class=" text-center" style="margin-top: 220px;">
                    <i class="fas fa-truck text-white fa-3x"></i>
                    <p class="text-white title-style">One Stop Shop</p>
                    <p class="text-white mb-0"></p>
  
                    <figure class="text-center mb-0">
                      <blockquote class="blockquote text-white">
                        <p class="pb-3">
                          <i class="fas fa-quote-left fa-xs text-primary"
                            style="color: hsl(210, 100%, 50%) ;"></i>
                          <span class="lead font-italic">Everything at your doorstep.</span>
                          <i class="fas fa-quote-right fa-xs text-primary"
                            style="color: hsl(210, 100%, 50%) ;"></i>
                        </p>
                      </blockquote>
  
                    </figure>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
                <h3 class="mb-4 text-uppercase">Delivery Info</h3>
  
                <div class="row">
                  <div class="col-md-6 mb-4">
                    <div class="">
                      <label class="" for="form3Example1m">First name</label>
                      <input type="text" id="a_fname" class="form-control form-control-lg" value= "<%= Address['firstName'] %>" style="font-size: 13px;">
                    </div>
                  </div>
                  <div class="col-md-6 mb-4">
                    <div class="">
                      <label class="" for="form3Example1n">Last name</label>
                      <input type="text" id="a_lname" class="form-control form-control-lg" value= "<%= Address['lastName'] %>" style="font-size: 13px;">
                    </div>
                  </div>
                </div>
  
                <div class="col-md-6 mb-4">
                  <label class="" for="form3Example8">Address</label>
                  <input type="text" id="a_address" class="form-control form-control-lg" value= "<%= Address['address'] %>" style="font-size: 13px;">
                </div>
  
  
  
                <div class="row">
                  <div class="col-md-6 mb-4">
  
                    <div class="col-md-6 mb-4">
                      <label class="" for="form3Example8">State</label>
                      <input type="text" id="a_state" class="form-control form-control-lg" value= "<%= Address['state'] %>" style="font-size: 13px;">
                    </div>
  
                  </div>
                  <div class="col-md-6 mb-4">
  
                    <div class="col-md-6 mb-4">
                      <label class="" for="form3Example8">City</label>
                      <input type="text" id="a_city" class="form-control form-control-lg" value= "<%= Address['city'] %>" style="font-size: 13px;">
                    </div>
  
                  </div>
                </div>

                <div class="col-md-6 mb-4">
                  <label class="" for="form3Example8">Country</label>
                  <input type="text" id="a_country" class="form-control form-control-lg" value= "<%= Address['country'] %>" style="font-size: 13px;">
                </div>
  
                <div class="col-md-6 mb-4">
                  <label class="" for="form3Example3">Zip</label>
                  <input type="text" id="a_zip" class="form-control form-control-lg" value= "<%= Address['zipcode'] %>" style="font-size: 13px;">
                </div>
  
                <!-- <div class="form-outline mb-4">
                  <input type="text" id="form3Example2" class="form-control form-control-lg" value= <%= Address['firstName'] %>>
                  <label class="form-label" for="form3Example2">Email</label>
                </div> -->

                <div class="col-md-6 mb-4">
                  <label class="" for="form3Example2">Phone Number</label>
                  <input type="text" id="a_phoneNumber" class="form-control form-control-lg" value= "<%= Address['phoneNumber'] %>" style="font-size: 13px;">
                </div>

                <div class="form-outline mb-4" hidden>
                  <input type="text" id="a_addressId" class="form-control form-control-lg" value= "<%= Address['id'] %>" style="font-size: 13px;">
                </div>

                <div class="form-outline mb-4" hidden>
                  <input type="text" id="a_type" class="form-control form-control-lg" value= "Edit">
                </div>
  
                <div class="d-flex justify-content-end pt-3">
                  <button type="button" class="btn btn-primary btn-lg"
                    style="background-color:hsl(210, 100%, 50%) " id = "p_save">Update Address</button>
                </div>
  
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('footer.ejs') %>
  </body>